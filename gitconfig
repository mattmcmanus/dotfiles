[user]
	name = Matt McManus
	email = matt@mcmanus.io
	signingkey = EDB8F457

[hub]
  protocol = https

[push]
  default = current

[pull]
  rebase = true
[alias]
  a = add -p
  c = commit
  amend = commit --amend
  ci = commit -v
  cob = checkout -b
  cop = checkout -p
  co = checkout
  m = !sh -c 'git checkout master && git pull --rebase --autostash && cd .' -
  cb = !sh -c 'git branch | cut -c 3- | pick | xargs git checkout' -
  br = branch
  rc = rebase --continue
  new-branch = !sh -c 'git checkout master && git pull --rebase && cd . && git checkout -b $1' -
  set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  merge-branch = !git checkout master && git merge @{-1}
  st = status
  s = status -sb
  fp = push -f
  pu = push
  poh = push origin HEAD
  yolo = push -f --no-verify
  pl = pull
  pr = pull-request
  l = log
  lm = log origin/master..
  ll = log --stat --abbrev-commit
  history = log -p -M --follow --stat --
  recap = log --no-merges --author=matt@mcmanus.io
  d = diff
  su = "!f() { git submodule sync; git submodule update --init; }; f"
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  unstage = reset HEAD
  up = !sh -c 'git pull --rebase --prune --autostash && git log --pretty=format:\"%C(bold blue)%an %Creset(%ar) %C(yellow)%s\" HEAD@{1}..'
  upm = !sh -c 'git fetch && git rebase origin/master --autostash'
  shove = commit --amend --no-edit
  tidy-up = !sh -c 'git rebase -i `git rev-parse origin/master`'
	list-branches = branch --sort=committerdate

[format]
  pretty=format:%C(yellow)%h%Creset - %Cgreen(%ai)%Creset - %s  %C(bold blue)<%ae>%Creset%C(red)%d%Creset 

[credential]
  helper = osxkeychain
[rerere]
  enabled = 1
[color]
  # Use colors in Git commands that are capable of colored output when outputting to the terminal
  ui     = auto
  diff   = auto
  status = auto
  branch = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore
  autocrlf     = input
  editor       = vim
	hooksPath = .githooks
[fetch]
  prune = true
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[mergetool "sourcetree"]
  cmd = /opt/homebrew-cask/Caskroom/sourcetree/1.8.1/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[apply]
  whitespace = nowarn
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[commit]
	gpgsign = true
[merge]
	conflictstyle = diff3
